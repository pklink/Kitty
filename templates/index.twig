<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title></title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">

    <!-- framework css -->
    <link type="text/css" rel="stylesheet" href="{{ app.baseUrl }}/css/groundwork.css">
    <!--[if IE]><link type="text/css" rel="stylesheet" href="{{ app.baseUrl }}/css/groundwork-ie.css"><![endif]-->
    <!--[if lt IE 9]><script type="text/javascript" src="{{ app.baseUrl }}/vendor/libs/html5shiv.min.js"></script><![endif]-->
    <!--[if IE 7]><link type="text/css" rel="stylesheet" href="{{ app.baseUrl }}/css/font-awesome-ie7.min.css"><![endif]-->
    <link rel="stylesheet" href="{{ app.baseUrl }}/css/main.css">
    <script src="{{ app.baseUrl }}/js/vendor/modernizr-2.6.2.min.js"></script>
    <script type="text/javascript">
        // extend Modernizr to have datauri test
        (function(){
            var datauri = new Image();
            datauri.onerror = function() {
                Modernizr.addTest('datauri', function () { return false; });
            };
            datauri.onload = function() {
                Modernizr.addTest('datauri', function () { return (datauri.width == 1 && datauri.height == 1); });
                Modernizr.load({
                    test: Modernizr.datauri,
                    nope: '{{ app.baseUrl }}/css/no-datauri.css'
                });
            };
            datauri.src = "data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///ywAAAAAAQABAAACAUwAOw==";
        })();
        // fallback if SVG unsupported
        Modernizr.load({
            test: Modernizr.inlinesvg,
            nope: [
                '{{ app.baseUrl }}/css/no-svg.css'
            ]
        });
        // polyfill for HTML5 placeholders
        Modernizr.load({
            test: Modernizr.input.placeholder,
            nope: [
                '{{ app.baseUrl }}/css/placeholder_polyfill.css',
                '{{ app.baseUrl }}/js/vendor/placeholder_polyfill.jquery.js'
            ]
        });
    </script>
</head>
