<script type="text/javascript" src="{{ app.baseUrl }}/js/groundwork.all.js"></script>

<script src="{{ app.baseUrl }}/js/plugins.js"></script>
<script src="{{ app.baseUrl }}/js/main.js"></script>

</body>
</html>
